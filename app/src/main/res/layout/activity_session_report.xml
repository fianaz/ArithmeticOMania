<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ifsb.arithmetico.SessionReportActivity"
    android:background="@color/sessionreport_bg">

    <TextView android:text="Session Report" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/tv_header"
        android:layout_marginBottom="10dp" />

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r1"
        android:layout_below="@+id/tv_header">

        <TextView
            app:layout_widthPercent="75%"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Number of questions:"
            android:id="@+id/tv_label1"
            android:textColor="@android:color/black" />

        <TextView
            app:layout_widthPercent="25%"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Value"
            android:layout_toRightOf="@+id/tv_label1"
            android:id="@+id/tv_numquestions"
            android:textColor="@android:color/black" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r2"
        android:layout_below="@+id/r1">

        <TextView
            app:layout_widthPercent="75%"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Questions attempted:"
            android:id="@+id/tv_label2"
            android:textColor="@android:color/black" />

        <TextView
            app:layout_widthPercent="25%"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Value"
            android:layout_toRightOf="@+id/tv_label2"
            android:id="@+id/tv_numattempted"
            android:textColor="@android:color/black" />

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/r3"
            android:layout_below="@+id/r2">

            <TextView
                app:layout_widthPercent="75%"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Perfect attempts:"
                android:id="@+id/tv_label3"
                android:textColor="@android:color/black" />

            <TextView
                app:layout_widthPercent="25%"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Value"
                android:layout_toRightOf="@+id/tv_label3"
                android:id="@+id/tv_numperfect"
                android:textColor="@android:color/black" />

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/r4"
            android:layout_below="@+id/r3">

            <TextView
                app:layout_widthPercent="75%"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Questions skipped:"
                android:id="@+id/tv_label4"
                android:textColor="@android:color/black" />

            <TextView
                app:layout_widthPercent="25%"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Value"
                android:layout_toRightOf="@+id/tv_label4"
                android:id="@+id/tv_numskipped"
                android:textColor="@android:color/black" />

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/r5"
            android:layout_below="@+id/r4">

            <TextView
                app:layout_widthPercent="75%"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Session time (seconds):"
                android:id="@+id/tv_label5"
                android:textColor="@android:color/black" />

            <TextView
                app:layout_widthPercent="25%"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Value"
                android:layout_toRightOf="@+id/tv_label5"
                android:id="@+id/tv_totaltime"
                android:textColor="@android:color/black" />

        </android.support.percent.PercentRelativeLayout>

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/r6"
            android:layout_below="@+id/r5">

            <TextView
                app:layout_widthPercent="75%"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Average attempted time (seconds):"
                android:id="@+id/tv_label6"
                android:textColor="@android:color/black" />

            <TextView
                app:layout_widthPercent="25%"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Value"
                android:layout_toRightOf="@+id/tv_label6"
                android:id="@+id/tv_avgtime"
                android:textColor="@android:color/black" />

        </android.support.percent.PercentRelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dismiss"
        android:id="@+id/btn_dismiss"
        android:layout_alignParentBottom="true"
        android:background="@color/sessionreport_dismiss_bg" />

</RelativeLayout>
